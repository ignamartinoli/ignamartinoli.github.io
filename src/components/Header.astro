---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeIcon from './ThemeIcon.astro';
---

<header>
	<nav>
		<div class="brand">
			<img src="/favicon.svg" alt="Site logo" width="32" height="32" />
			<h2><a href="/">{SITE_TITLE}</a></h2>
		</div>
		<div class="menu-toggle" onclick="document.body.classList.toggle('menu-open')">
			☰
		</div>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<ThemeIcon />
			<a href="https://github.com/ignamartinoli/ignamartinoli.github.io" target="_blank">
				<span class="sr-only">Go to my GitHub repo</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
  .header::before {
    content: '';
    position: absolute;
    top: -100vh;
    left: 0;
    right: 0;
    height: 100vh;
    background: inherit;
    z-index: -1;
  }

	header {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		z-index: 100;
		background: color-mix(in srgb, var(--crust) 75%, transparent);
		box-shadow: 0 2px 8px color-mix(in srgb, var(--crust) 75%, transparent);
	}

	body {
		padding-top: 60px; /* Adjust to match your header height */
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a, h2 a.active {
		text-decoration: none;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1em; /* Optional: keeps internal links spaced out nicely */
		padding: 0 1.5rem
	}

	.brand {
		display: flex;
		align-items: center;
		gap: 0.5em; /* spacing between logo and title */
	}

	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}

	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--mauve);
	}

	/* nav a:hover { */
	/* 	color: var(--red); */
	/* } */

	.social-links, .social-links a {
		display: flex;
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}

	.menu-toggle {
		display: none;
		font-size: 2rem;
		cursor: pointer;
		user-select: none;
	}

	@media (max-width: 720px) {
		.internal-links {
			display: none; /* hide links by default on mobile */
			flex-direction: column;
			position: absolute;
			top: 60px; /* adjust to match header height */
			right: 0;
			background: var(--crust);
			padding: 1em;
			box-shadow: 0 2px 8px rgba(0,0,0,0.3);
		}

		body.menu-open .internal-links {
			display: flex; /* show links when menu is open */
		}

		.menu-toggle {
			display: block; /* show ☰ button on mobile */
		}
	}
</style>
